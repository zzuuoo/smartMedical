<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <SearchView
        android:layout_width="match_parent"
        android:id="@+id/bookSearchView"
        android:queryHint="请输入科室的名称"
        android:layout_height="wrap_content"></SearchView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/SecondaryText"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:id="@+id/nothingBook"
        android:visibility="gone"
        android:text="空空如也"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/book_section_list"
        android:layout_gravity="center"
        />


</LinearLayout>