<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mybook_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <TextView
            android:id="@+id/mybook_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="我的挂号" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mybook_add"
        android:textSize="15dp"
        android:background="@drawable/button_selector"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="预约"/>
    </android.support.v7.widget.Toolbar>

    <SearchView
        android:layout_width="match_parent"
        android:id="@+id/mybookSearchView"
        android:queryHint="请输入查找内容..."
        android:layout_height="wrap_content"></SearchView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/SecondaryText"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:id="@+id/nothingmyBook"
        android:visibility="gone"
        android:text="空空如也"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mybook_list"
        android:layout_gravity="center"
        />


</LinearLayout>